[MASTER]
ignore=CVS
persistent=yes
load-plugins=

[MESSAGES CONTROL]
disable=C0111,R0903,C0103,W1203, E1101

[FORMAT]
max-line-length=100
indent-string='    '

[BASIC]
good-names=i,j,k,ex,Run,_

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no

[TYPECHECK]
generated-members=REQUEST,acl_users,aq_parent,"[a-zA-Z]+_set{1,2}",save_form

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[IMPORTS]
deprecated-modules=regsub,TERMIOS,Bastion,rexec

[CLASSES]

[DESIGN]
max-args=5
ignored-classes=SQLObject
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=7
min-public-methods=2
max-public-methods=20

[VARIABLES]
init-import=no
dummy-variables-rgx=_$|dummy
additional-builtins=

[EXCEPTIONS]
overgeneral-exceptions=Exception 